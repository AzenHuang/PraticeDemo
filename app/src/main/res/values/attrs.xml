<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomizeTextView">
        <attr name="attr_one" format="string" />
        <attr name="attr_two" format="string" />
        <attr name="attr_three" format="string" />
        <attr name="attr_four" format="string" />
    </declare-styleable>

    <attr name="CustomizeDefStyleAttr" format="reference" />


    <declare-styleable name="TagsLayout">
        <attr name="maxWidth" format="dimension">
            <enum name="parent" value="-1"/>
            <enum name="device" value="-2"/>
            <enum name="unspecific" value="-3"/>
        </attr>

        <attr name="maxWidthScale" format="float" />

        <attr name="rowAlign">
            <enum name="top" value="-1"/>
            <enum name="bottom" value="-2"/>
            <enum name="center" value="-3"/>
        </attr>

        <attr name="maxRowCount" format="integer">
            <enum name="adjust" value="-1"/>
        </attr>

        <attr name="horizontalSpace" format="dimension"/>
        <attr name="verticalSpace" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="SecondaryTextView">
        <attr name="secondaryTextSize" format="dimension" />
        <attr name="secondaryTriggerLine" format="integer" />
    </declare-styleable>

    <declare-styleable name="LogoView">
        <attr name="cornerRadius" format="dimension" />
        <attr name="logoText" format="string" />
        <attr name="textColor" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="circleColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer" />
        <attr name="expandDrawable" format="reference" />
        <attr name="collapseDrawable" format="reference" />
        <attr name="expandText" format="string" />
        <attr name="collapseText" format="string" />
    </declare-styleable>

    <declare-styleable name="MtEditText">
        <attr name="edittexttype">
            <enum name="basic" value="0" />
            <enum name="basic_clear" value="1" />
            <enum name="basic_title" value="2" />
            <enum name="clear_title" value="3" />
            <enum name="image_title" value="4" />
            <enum name="inside_right_warning" value="5" />
            <enum name="outside_right_warning" value="6" />
            <enum name="multiline" value="7" />
            <enum name="multiline_hint" value="8" />
            <enum name="multiline_hint_border" value="9" />
            <enum name="multiline_all_hint" value="10" />
            <enum name="comment" value="11" />
            <enum name="multiline_comment" value="12" />
            <enum name="pay" value="13" />
            <enum name="largetext" value="14" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomTitleBar">
        <attr name="title_text" format="string" />
        <attr name="title_text_size" format="dimension" />
        <attr name="title_text_color" format="color" />
        <attr name="left_drawable" format="reference" />
        <attr name="right_drawable" format="reference" />
    </declare-styleable>

</resources>